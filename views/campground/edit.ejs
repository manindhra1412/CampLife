<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="post" novalidate class="form-validate" enctype="multipart/form-data">
            <!-- Title -->
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input required class="form-control" type="text" id="title" name="title" value="<%=campground.title%>">
            </div>
            <!-- Location -->
            <div>
                <label class="form-label" for="location">location</label>
                <input required class="form-control" type="text" id="location" name="location" value="<%=campground.location%>">
            </div class="mb-3">
            <!-- Price -->
            <div class="mb-3 mt-2">
                <label for="price">Campground Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input required type="text" class="form-control" id="price" name="price" placeholder="0.00" aria-describedby="price-label" value="<%=campground.price%>">
                </div>
            </div>
              <!-- Image -->
              <div class="mb-3">
                <label class="form-label " for="image">Add More Images</label>
                <input type="file" class="form-control" name="image" id="image" multiple>
                </div>
            <!-- Description -->
            <div class="mb-3">
                <label class="form-label" for="description" maxlength="200">Description</label>
                <textarea required class="form-control" type="text" id="description" name="description"><%=campground.description%></textarea>
            </div>
            <div class="mb-3">
                <% campground.images.forEach(function(img, i) {  %>
                <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="" crossorigin="anonymous">
                <div class="form-check-inline">
                    <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                </div>
                <label for="image-<%=i%>">Delete?</label>
                <% })%>
            </div>
            <button class="btn btn-success mt-3 mb-3">Update CampGround</button>
        </form>
    </div>
</div>